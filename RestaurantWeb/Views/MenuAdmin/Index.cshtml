
@model IEnumerable<RestaurantWeb.Models.FoodItem>
@{
    ViewBag.Title = "Menu Admin";
}

<h2>Menu Admin</h2>

<p>
    @Html.ActionLink("Create Menu Item", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(x => x.Name)
        </th>
        <th>
            @Html.DisplayNameFor(x => x.Description)
        </th>
        <th>
            @Html.DisplayNameFor(x => x.Price)
        </th>
        <th>
            @Html.DisplayNameFor(x => x.Picture)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(x => item.Name)
            </td>
            <td style="max-width:400px;">
                @Html.DisplayFor(x => item.Description)
            </td>
            <td>
                @Html.DisplayFor(x => item.Price)
            </td>
            <td>
                @Html.DisplayFor(x => item.Picture)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>